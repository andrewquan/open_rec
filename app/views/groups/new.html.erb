<div class="row">
  <div class="col-sm">
    <%= content_tag :h3, "Create new group" %>
    <div class="row">
      <div class="col-sm">
        <%= simple_form_for @group do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.submit "Create Group", class: "btn-primary" %>
          <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>



<div class="row">
  <div class="col">
    <%= content_tag :h3, "Create new event" %>
    <%= simple_form_for @event do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :group_id, collection: @groups %>
      <%= f.input :start_datetime, as: :string, :input_html => { :id => "datetimepicker1" } %>
      <%= f.input :end_datetime, as: :string, :input_html => { :id => "datetimepicker2" } %>
      <%= f.submit "Create Event", class: "btn btn-primary" %>
      <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
    <% end %>
  </div>
</div>

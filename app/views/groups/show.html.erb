<div class="container">
  <div class="row">
    <div class="col">
      <div class="jumbotron">
        <h1 class="display-4"></h1>
        <%= content_tag :p, "#{@group.name} group banner, generic default picture (options to be provided), or even group movie" %>
        <hr class="my-4">
        <%= content_tag :p, "Some information about the #{@group.name}" %>
        <% unless current_user.group_member?(@group.id) %>
          <%= link_to "Join Group", join_group_path(@group.id), method: :post, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <%= content_tag :h5, "Members" %>
          <ul>
            <% @group.members.each do |member| %>
              <%= link_to "<li>#{member.username}</li>".html_safe, user_path(member) %>
            <% end %>
            <% 5.times do %>
              <li>A member</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <%= content_tag :h5, "Some info about the group (recent events, etc.)" %>
          <ul class="nav nav-tabs">
            <li class="nav-item">
              <%= link_to "Upcoming Events", "#", class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Past Events", "#", class: "nav-link" %>
            </li>
          </ul>
          <!-- need to handle tabs -->
          <%= render 'upcoming_events' %>
          <%= render 'past_events' %>
        </div>
      </div>
    </div>
  </div>
</div>

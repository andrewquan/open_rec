<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to "OpenRec", root_path, id: 'open_rec_logo' %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% unless current_user %>
          <li class="nav-item">
            <%= link_to "Login", user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <% if current_user %>
            <%= link_to current_user.username, "#", {
              class: "nav-link dropdown-toggle",
              id: "navbarDropdown",
              role: "button",
              data: { toggle: "dropdown" },
              aria: { haspopup: true, expanded: false }
              } %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <h6 class="dropdown-header">About You</h6>
            <%= link_to "Your Page", current_user, class: "dropdown-item" %>
            <%= link_to "Edit Personal Info", edit_user_registration_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Settings", "#", class: "dropdown-item" %>
            <%= link_to "Logout", destroy_user_session_path, {
              method: :delete,
              class: "dropdown-item" } %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</div>
